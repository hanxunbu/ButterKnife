<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/activity_guide_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:background="@null"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/activity_guide_circle_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_circle_red"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/activity_guide_circle_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_circle_blue"
            android:layout_toRightOf="@id/activity_guide_circle_iv1"

            />

        <ImageView
            android:id="@+id/activity_guide_circle_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_circle_blue"
            android:layout_toRightOf="@id/activity_guide_circle_iv2"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/activity_guide_circle_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_circle_blue"
            android:layout_toRightOf="@id/activity_guide_circle_iv3"
            android:layout_marginLeft="10dp"

            />
        </RelativeLayout>
    </RelativeLayout>
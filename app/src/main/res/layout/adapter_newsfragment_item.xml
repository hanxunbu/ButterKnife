<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/adapter_nf_item_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/adapter_newsfragment_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="惊！今年将XXXXXXXXXXXXXXXXXXXXXXXX"
        android:layout_toRightOf="@+id/adapter_nf_item_iv"
        android:layout_alignTop="@+id/adapter_nf_item_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/adapter_newsfragment_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_nf_item_iv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/adapter_nf_item_iv"
        android:text="长江日报"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/adapter_newsfragment_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_nf_item_iv"
        android:layout_marginLeft="10dp"
        android:text="2017-01-09 13:13"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
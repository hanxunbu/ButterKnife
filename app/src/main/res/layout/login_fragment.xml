<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/jinianruyu"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        />


    <RelativeLayout
        android:id="@+id/login_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:background="@drawable/shape_login"

        >
        <ImageView
            android:id="@+id/login_name_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_face_black_24dp"
            android:padding="10dp"
           />
        <EditText
            android:id="@+id/login_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入账号"
            android:textSize="20dp"
            android:layout_toRightOf="@id/login_name_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/login_password_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:background="@drawable/shape_login"
        >

        <ImageView
            android:id="@+id/login_password_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/ic_enhanced_encryption_black_24dp"
            />
        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入密码"
            android:textSize="20dp"
            android:layout_toRightOf="@id/login_password_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login"
            android:text="登录"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"

            />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login"
            android:text="注册"
            android:textSize="20dp"
            android:layout_marginRight="40dp"

            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="20dp"
            android:textColor="#7FFFAA"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/btn_login"

            />
    </RelativeLayout>


</LinearLayout>